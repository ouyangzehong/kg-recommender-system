<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="#00FFFFFF"
    android:orientation="vertical">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp">

     <TextView
         android:id="@+id/tv_name_note"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="5dp"
         android:ellipsize="end"
         android:lines="1"
         android:maxLength="8"
         android:text="橘子"
         android:textSize="17sp"
         android:textStyle="bold" />

     <ImageView
         android:id="@+id/iv_jianhao_note"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:src="@mipmap/jianhao" />

     <TextView
         android:id="@+id/tv_danwei_note"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginRight="14dp"
         android:layout_toLeftOf="@+id/iv_jianhao_note"
         android:text="(单位：100g)" />

     <TextView
         android:id="@+id/tv_content_note"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginRight="15dp"
         android:layout_toLeftOf="@+id/tv_danwei_note"
         android:text="5"
         android:textSize="17sp"
         android:textStyle="bold" />

 </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/dotted_line"
        android:layerType="software" />

</LinearLayout>