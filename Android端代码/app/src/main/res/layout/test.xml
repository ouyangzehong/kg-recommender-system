<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_radius15"
    android:layout_marginBottom="20dp"
    >
    <RelativeLayout
        android:id="@+id/rl_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recommend"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ddb66c"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/iv_cd"
                android:src="@mipmap/shuizhuyu"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/cv_recommend"
            android:text="水煮鱼"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/cv_recommend"
            android:text="116"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/tv_heat"
            android:text="千卡/100克"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/line_h"
        android:showDividers="beginning|middle|end"
        android:orientation="vertical"
        >

        <TableRow
            android:divider="@drawable/line_h"
            android:showDividers="beginning|middle|end"
            android:orientation="horizontal">
            <TextView

                android:layout_weight="1"
                android:padding="8dp"
                android:text="碳水化合物"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:padding="8dp"
                android:text="脂肪"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:padding="8dp"
                android:text="纤维素"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:padding="8dp"
                android:text="蛋白质"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:divider="@drawable/line_h"
            android:showDividers="beginning|middle|end">
            <TextView
                android:id="@+id/tv_cho"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="内容"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_fat"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="内容"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_e"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="内容"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_pro"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="内容"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
